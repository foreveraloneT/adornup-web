{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "plugin:react/recommended",
    "standard-with-typescript"
  ],
  "overrides": [
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "project": true
  },
  "plugins": [
    "react"
  ],
  "settings": {
    "react": {
      "version": "detect" // detect react version
    }
  },
  "rules": {
    "@typescript-eslint/comma-dangle": ["error", "always-multiline"],
    "@typescript-eslint/semi": ["error", "always"]
  },
  "ignorePatterns": [
    "public/**/*",
    "node_modules/**/*",
    ".cache/**/*",
    "src/gatsby-types.d.ts",
    "**/*.js"
  ]
}
